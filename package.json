{
  "name": "you-engine",
  "version": "3.0.0",
  "description": "A zero-dependency, lightweight 2D/2.5D game engine with multi-renderer support",
  "author": "atshelchin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atshelchin/you-engine.git"
  },
  "homepage": "https://github.com/atshelchin/you-engine#readme",
  "bugs": {
    "url": "https://github.com/atshelchin/you-engine/issues"
  },
  "type": "module",
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepublishOnly": "pnpm build",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3",
    "vite": "^5.4.11",
    "vite-plugin-dts": "^4.3.0"
  },
  "keywords": [
    "game",
    "engine",
    "canvas",
    "2d",
    "2.5d",
    "isometric",
    "typescript",
    "webgl",
    "webgpu",
    "zero-dependency",
    "lightweight"
  ],
  "license": "MIT"
}
